@model AdaptItAcademy.DataAccess.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 class="bg-danger text-center rounded text-white p-2">Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />


    <form asp-action="Delete">
        <div class="form-group">
            <label asp-for="CourseID"></label>
            <input asp-for="CourseID" readonly class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" readonly asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="TrainingVenue"></label>
            <input asp-for="TrainingVenue" readonly class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastDateOfRegistration"></label>
            <input asp-for="LastDateOfRegistration" readonly class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SeatsLeft"></label>
            <input asp-for="SeatsLeft" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3" readonly ></textarea>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>
